<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kết quả tìm kiếm</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            padding: 40px;
            font-size: 1.2rem;
        }

        .user-card {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .user-avatar {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            object-fit: cover;
            border: 2px solid #007bff;
        }

        h1 {
            margin-bottom: 30px;
            font-size: 2.5rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Kết quả tìm kiếm</h1>

        <% if (error) { %>
            <div class="alert alert-danger text-center"><%= error %></div>
        <% } else if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
                <div class="user-card">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <img src="<%= user.avatar_url %>" alt="Avatar" class="user-avatar img-fluid">
                            <!-- Debug: <%= user.avatar_url %> -->
                        </div>
                        <div class="col-md-10">
                            <p><strong>Username:</strong> <%= user.username %></p>
                            <p><strong>Ngày tạo:</strong> <%= new Date(user.created_at).toLocaleDateString() %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-warning text-center">Không tìm thấy người dùng nào.</div>
        <% } %>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary">Trở lại trang chủ</a>
        </div>
    </div>
</body>
</html>
